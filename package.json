{
  "name": "CRUD-sans-frameworks",
  "description": "CRUD without a framework",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "jade": "*",
    "mongodb": "*",
    "mongoose": "*",
    "nodemon": "^1.3.7"
  },
  "devDependencies": {
    "jasmine-node": "^1.14.5",
    "jshint": "^2.7.0"
  },
  "script": {
    "run": "./node_modules/nodemon/bin/nodemon.js bin/server",
    "test": "npm run jasmine",
    "jshint": "node node_modules/jshint/bin/jshint src && node node_modules/jshint/bin/jshint spec",
    "jasmine": "jasmine-node --captureExceptions  ./spec"
  }
}
